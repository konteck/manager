{
    "watch": true,
    "workers": 2,
    "js": {
        "all": {
            "watch": true,
            "compress": false,
            "output": {
                "./media/cache": "/cache"
            },
            "input": [
                "./media/scripts/jquery.min.js",
                "./media/scripts/jquery.tools.min.js",
                "./media/scripts/bootstrap.min.js",
                "./media/scripts/common.js"
            ]
        }
    },
    "css": {
        "all": {
            "watch": true,
            "compress": false,
            "output": {
                "./media/cache": "/cache"
            },
            "input": [
                "./media/styles/bootstrap.min.css",
                "./media/styles/common.css"
            ]
        }
    }
}